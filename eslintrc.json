{
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true,
      "classes": true
    },
    "sourceType": "module"
  },

  "env": {
    "es6": true,
    "node": true
  },

  "globals": {
    "document": false,
    "navigator": false,
    "window": false
  },

  "extends": ["standard"],

  "rules": {
    "array-bracket-spacing": ["warn", "always"],
    "comma-dangle": ["warn", {
      "arrays": "always",
      "objects": "always",
      "imports": "always",
      "exports": "always",
      "functions": "ignore"
      }],
    "quote-props": ["warn", "as-needed", { "keywords": true }],
    "no-sequences": ["off"],
    "no-console": ["warn"],
    "object-curly-spacing": ["warn", "always"],
    "standard/object-curly-even-spacing": ["off"]
  }
}
